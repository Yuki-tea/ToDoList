generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model Task {
  id          Int      @id @default(autoincrement()) // ID
  title       String // タスク名
  isCompleted Boolean  @default(false) // 状態
  createdAt   DateTime @default(now()) // 作成日時
  updatedAt   DateTime @updatedAt // 更新日時
}
